.slide {
    @extend .col, .s12;
    min-height: 100%;
}

.title {
    font-size: 72px;
    font-weight: 600;
}

.nbar {
    @extend .tabs;
    padding-top: 0;
}

.nitem {
    @extend .tab;
}

.nitem a span{
    font-family: 'Josefin Sans';
    font-size: 14px;
    position: relative;
    top: 40%;
    transform: translateY(-40%);
}

.ge {
    padding-bottom: 30px;
}

#navbar {
    background-color: rgba(30, 136, 229, 0);
    box-shadow: 1px 1px 1px -1px #000000;
}

.nbar {
    overflow: hidden;
}

.nfixed {
    margin-top: 0;
    top: 0;
    z-index: 100;
    position: fixed;
    width: 100%;
}

.section {
    #{$a-tags} {
        color: $yellow-1;
        text-decoration: none;
    }

    #{$a-tags-hover} {
        color: $yellow-1;
        text-decoration: underline;
    }
}

.section h2 {
    margin-bottom: 0;
}

.card-content p, td {
    font-size: 1rem;
}

#wifi-table {
    border-top: 1px solid #ddd;
    border-collapse: collapse;
    border-spacing: 0;
}

#wifi-table:last-child {
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
}

#wifi-table td {
    vertical-align: top;
}

#wifi-table td {
    border: 1px solid #ddd;
}

#wifi-table tr:first-child th {
    border-top: 0;
}
#wifi-table tr:last-child td {
    border-bottom: 0;
}
#wifi-table td{
    border-left: 0;
}
#wifi-table td {
    border-right: 0;
}

#wifi-table tr td:last-child {
    padding-left: 20px;
}